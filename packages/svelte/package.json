{
  "name": "@nextlint/svelte",
  "version": "3.1.0",
  "scripts": {
    "playground": "vite dev",
    "dev": "pnpm dev:package",
    "dev:package": "pnpm package -w",
    "build": "pnpm package",
    "build:css": "vite build",
    "deploy": "vite build",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "prepare": "svelte-kit sync "
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./EditorTheme": "./dist/EditorTheme.svelte"
  },
  "files": [
    "dist",
    "build",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "svelte": "*"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.6.5",
    "@melt-ui/svelte": "^0.79.1",
    "@nextlint/core": "^1.4.2",
    "@prosemirror-adapter/svelte": "^0.2.6",
    "@svelte-put/clickoutside": "^3.0.2",
    "@svelte-put/lockscroll": "^1.0.2",
    "@tiptap/core": "^2.4.0",
    "@tiptap/extension-bubble-menu": "^2.4.0",
    "@tiptap/extension-code-block": "^2.4.0",
    "@tiptap/extension-dropcursor": "^2.4.0",
    "@tiptap/extension-floating-menu": "^2.4.0",
    "@tiptap/extension-link": "^2.4.0",
    "@tiptap/extension-paragraph": "^2.4.0",
    "@tiptap/pm": "^2.4.0",
    "@tiptap/suggestion": "^2.4.0",
    "clsx": "^2.1.1",
    "lucide-svelte": "^0.379.0",
    "prosemirror-highlight": "^0.6.0",
    "radash": "^12.1.0",
    "shiki": "^1.6.0",
    "tailwind-merge": "^2.3.0",
    "tailwind-variants": "^0.2.1",
    "unsplash-js": "^7.0.19",
    "zeed-dom": "^0.13.3"
  },
  "devDependencies": {
    "@melt-ui/pp": "^0.3.2",
    "@sveltejs/adapter-static": "^3.0.1",
    "@sveltejs/kit": "^2.5.10",
    "@sveltejs/package": "^2.3.1",
    "@sveltejs/vite-plugin-svelte": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.39.0",
    "postcss": "^8.4.38",
    "postcss-nested": "^6.0.1",
    "postcss-preset-env": "^9.5.13",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.3",
    "publint": "^0.2.8",
    "sass": "^1.77.2",
    "svelte": "^4.2.17",
    "svelte-check": "^3.7.1",
    "svelte-preprocess": "^5.1.4",
    "svelte-sequential-preprocessor": "^2.0.1",
    "tailwindcss": "^3.4.3",
    "tailwindcss-animate": "^1.0.7",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5",
    "vite": "5.2.11"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sveltor/nextlint",
    "directory": "packages/svelte"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "keywords": [
    "Svelte",
    "Rich Text Editor",
    "WYSIWYG",
    "Nextlint",
    "tiptap",
    "javascript",
    "typescript",
    "gpt"
  ]
}
