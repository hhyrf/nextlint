  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sveltor/nextlint",
    "directory": "packages/svelte"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "keywords": [
    "Svelte",
    "Rich Text Editor",
    "WYSIWYG",
    "Nextlint",
    "tiptap",
    "javascript",
    "typescript",
    "gpt"
  ]
}
